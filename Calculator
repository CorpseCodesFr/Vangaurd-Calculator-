<!-- Your HTML content -->
<div class="popup" id="popup">
    <button class="button" onclick="enableDarkMode()">Enable Dark Mode</button>
    <button class="button" onclick="runFunction2()">Link 2</button>
    <button class="button" onclick="runFunction3()">Link 3</button>
</div>

<!-- Your JavaScript code -->
<script>
    let popupVisible = false;

    function togglePopup() {
        const popup = document.getElementById('popup');
        if (!popupVisible) {
            popup.style.display = 'block';
            popupVisible = true;
        } else {
            popup.style.display = 'none';
            popupVisible = false;
        }
    }

    function enableDarkMode() {
        const body = document.body;
        const calculator = document.getElementById('calculator');
        if (!darkModeEnabled) {
            body.style.backgroundColor = '#222';
            calculator.style.backgroundColor = '#333';
            calculator.style.color = '#fff';
            darkModeEnabled = true;
            document.getElementById('toggleDarkModeButton').textContent = 'Light Mode';
        } else {
            body.style.backgroundColor = '#f5f5f5';
            calculator.style.backgroundColor = '#fff';
            calculator.style.color = '#000';
            darkModeEnabled = false;
            document.getElementById('toggleDarkModeButton').textContent = 'Dark Mode';
        }
    }

    function runFunction2() {
        // JavaScript function for Link 2
        alert("Function 2 executed!");
    }

    function runFunction3() {
        // JavaScript function for Link 3
        alert("Function 3 executed!");
    }

    document.addEventListener('keydown', function(event) {
        if (event.key === 't') {
            togglePopup();
        }
    });
</script>

</body>
